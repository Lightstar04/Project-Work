@model InventoryManagement.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    var errorMessage = ViewData["ErrorMessage"];
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="widget p-5 mt-5" style="background-color:#54598D">
            <div class="mb-3 d-flex align-items-center flex-column">
                <h2 class="text-light">Login</h2>
                <span class="text-danger fs-6">@errorMessage</span>
            </div>
            <form method="post" asp-controller="Account" asp-action="Login" class="row justify-content-center mb-2 p-2 text-light">
                <div class="mb-3 w-75">
                    <label class="form-label">Email</label>
                    <input name="Email" class="form-control" value="@Model.Email" required type="email" />
                </div>
                <div class="mb-3 w-75">
                    <label class="form-label">Password</label>
                    <input type="password" name="Password" class="form-control" required />
                </div>
                <div class="mb-3 form-check w-75 ms-4">
                    <input type="checkbox" class="form-check-input" name="RememberMe" />
                    <label class="form-check-label">Remember me</label>
                </div>
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                <div class="row mb-3 w-75 justify-content-center">
                    <button class="btn btn-success w-50 mt-2">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
@Html.ValidationSummary()
