@model InventoryManagement.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    var errorMessage = ViewData["ErrorMessage"];
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="widget p-5 mt-5" style="background-color:#54598D">
            <div class="mb-3 d-flex align-items-center flex-column">
                <h2 class="text-light">Register</h2>
                <span class="text-danger fs-6">@errorMessage</span>
            </div>
            <form method="post" asp-controller="Account" asp-action="Register" class="row justify-content-center mb-2 p-2 text-light">
                <div class="mb-3 w-75">
                    <input name="DisplayName" class="form-control" required placeholder="Display name"/>
                </div>
                <div class="mb-3 w-75">
                    <input name="Email" class="form-control" required type="email" placeholder="Email"/>
                </div>
                <div class="mb-3 w-75">
                    <input type="password" name="Password" class="form-control" required placeholder="Password"/>
                </div>
                <div class="row mb-3 w-75 justify-content-center">
                    <button class="btn btn-success w-50 mt-2">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
@Html.ValidationSummary()
